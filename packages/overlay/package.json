{
  "name": "breakpoint-overlay",
  "version": "0.1.0",
  "description": "Overlay utility for debugging responsive layouts in the browser",
  "type": "module",
  "private": false,
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "main": "./dist/index.cjs",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "pnpm run typecheck && vite build && pnpm run types",
    "typecheck": "tsc --noEmit",
    "types": "tsc -p tsconfig.build.json",
    "preview": "vite preview",
    "test": "vitest"
  },
  "keywords": [
    "breakpoints",
    "overlay",
    "responsive",
    "debug"
  ],
  "author": {
    "name": "Qudus Olawale Bashiru"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^27.0.0",
    "typescript": "~5.8.3",
    "vite": "^7.1.6",
    "vitest": "^3.2.4"
  }
}
